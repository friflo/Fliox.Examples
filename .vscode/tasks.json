{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "isBuildCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Demos.sln",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "isTestCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/Demos.sln",
                "-l",
                "console;verbosity=detailed"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Demos.sln",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/Demos.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        // ----------------------- build projects -----------------------
        {
            "label": "build DemoHub",
            "isBuildCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": ["build", "${workspaceFolder}/Demo/Hub/DemoHub.csproj"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build DemoTest",
            "isBuildCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": ["build", "${workspaceFolder}/Demo/Test/DemoTest.csproj"],
            "problemMatcher": "$msCompile"
        },

        {
            "label": "build TodoHub",
            "isBuildCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": ["build", "${workspaceFolder}/Todo/Hub/TodoHub.csproj"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build TodoTest",
            "isBuildCommand": true,
            "command": "dotnet",
            "type": "process",
            "args": ["build", "${workspaceFolder}/Todo/Test/TodoTest.csproj"],
            "problemMatcher": "$msCompile"
        },
    ]
}
{
    "files.exclude": {
        ".docs": false,
        ".gitignore": true,
        ".gitpod.yml": false,
		"**/obj": true,
		"**/bin": true,
        "**/.github": false,
        "**/.vs": true,
        "**/.vscode": false,
        "**/.run": true,
        "**/.idea": true,
        "**/*.user": true,
        "**/*.csproj": false,
        "**/*.DotSettings": true,
        "**/appsettings.json": true,
        "package.json": false,
        "package-lock.json": true,
        "node_modules": true,
        ".scripts": true,
        ".gitattributes": true
    },
    "cSpell.words": [
        "bchavez",
        "Chapsas",
        "cref",
        "demohub",
        "DTO",
        "GraphiQL",
        "Inscape",
        "LINQ",
        "mdast",
        "Npgsql",
        "Randomizer",
        "Swashbuckle",
        "todohub",
        "Ullrich",
        "Unicodes",
        "upsert",
        "upserts",
        "Walkthrough"
    ],
    "explorer.compactFolders": false,
    "[markdown]": {
        "editor.wordWrap": "off"
    },
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown.preview.markEditorSelection": false,
    // connection settings for: https://marketplace.visualstudio.com/items?itemName=mtxr.sqltools
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "database": "${workspaceFolder:Fliox.Examples}/Todo/Hub/todo.sqlite3",
            "name": "todo"
        }
    ],
    "sqltools.useNodeRuntime": true,
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.unitTestDebuggingOptions": {
        "logging": {
            "moduleLoad": false
        }
    }
}